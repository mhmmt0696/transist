<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/horizontal_bar"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@color/acik_yesil"
        app:layout_constraintStart_toEndOf="@id/a1"
        app:layout_constraintTop_toTopOf="@id/a1"
        app:layout_constraintBottom_toBottomOf="@id/a1"
        app:layout_constraintEnd_toStartOf="@id/c1"
        android:elevation="1dp"/>

    <TextView
        android:id="@+id/a1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text="A1"
        android:gravity="center"
        android:textColor="@color/cvBackground"
        android:textSize="11sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:background="@drawable/doluluk"
        android:backgroundTint="@color/koyu_yesil"
        android:elevation="3dp"/>

    <TextView
        android:id="@+id/a2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text="A2"
        android:gravity="center"
        android:textColor="@color/cvBackground"
        android:textSize="11sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@id/a1"
        app:layout_constraintEnd_toStartOf="@id/b1"
        android:background="@drawable/doluluk"
        android:backgroundTint="@color/acik_yesil"
        android:elevation="3dp"/>

    <TextView
        android:id="@+id/b1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text="B1"
        android:gravity="center"
        android:textColor="@color/cvBackground"
        android:textSize="11sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@id/a2"
        app:layout_constraintEnd_toStartOf="@id/b2"
        android:background="@drawable/doluluk"
        android:backgroundTint="@color/acik_yesil"
        android:elevation="3dp"/>

    <TextView
        android:id="@+id/b2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text="B2"
        android:gravity="center"
        android:textColor="@color/cvBackground"
        android:textSize="11sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@id/b1"
        app:layout_constraintEnd_toStartOf="@id/c1"
        android:background="@drawable/doluluk"
        android:backgroundTint="@color/acik_yesil"
        android:elevation="3dp"/>

    <TextView
        android:id="@+id/c1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text="C1"
        android:gravity="center"
        android:textColor="@color/cvBackground"
        android:textSize="11sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:background="@drawable/doluluk"
        android:backgroundTint="@color/acik_yesil"
        android:elevation="3dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>