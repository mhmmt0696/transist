<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:padding="15dp"
    android:background="@color/cvBackground">

    <ImageButton
        android:id="@+id/button_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_replay_24"
        android:padding="10dp"
        android:layout_marginEnd="10dp"
        android:clickable="false"
        android:focusable="false"
        android:background="@color/cvBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@color/cvBackground"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_options"
        app:layout_constraintBottom_toTopOf="@id/text_view_subtitle"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Ana Başlık Metni Buraya Gelecek" />

    <TextView
        android:id="@+id/text_view_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:textStyle="italic"
        android:textColor="@color/textColorPrimary"
        android:background="@color/cvBackground"
        app:layout_constraintStart_toStartOf="@id/text_view_title"
        app:layout_constraintEnd_toEndOf="@id/text_view_title"
        app:layout_constraintTop_toBottomOf="@id/text_view_title"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Alt başlık veya daha uzun bir açıklama metni." />

</androidx.constraintlayout.widget.ConstraintLayout>