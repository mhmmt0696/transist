<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fragmentlerin gösterileceği alan -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/arkaplan" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/bn_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bn_profile" />

    <ImageButton
        android:id="@+id/bn_list"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:elevation="5dp"
        android:background="@drawable/bg_bottom_sides"
        android:src="@drawable/baseline_format_list_bulleted_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/bn_home"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/bn_profile"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:elevation="5dp"
        android:background="@drawable/bg_bottom_sides"
        android:src="@drawable/baseline_account_circle_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bn_home" />

    <ImageButton
        android:id="@+id/bn_home"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_bottom_home"
        android:elevation="6dp"
        android:src="@drawable/ic_home"
        app:layout_constraintBottom_toBottomOf="@id/bn_profile"
        app:layout_constraintEnd_toStartOf="@id/bn_profile"
        app:layout_constraintStart_toEndOf="@id/bn_list"
        app:tint="@color/green" />


</androidx.constraintlayout.widget.ConstraintLayout>