<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/arkaplan">

    <include
        android:visibility="gone"
        android:id="@+id/cv_unknown"
        layout="@layout/cv_unknown"/>

    <TextView
        android:id="@+id/txt_liste_baslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/liste_baslik"
        android:textStyle="bold"
        android:textSize="20sp"
        android:elevation="1dp"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <SearchView
        android:id="@+id/searchView_folders"
        android:layout_width="0dp"
        android:layout_height="38dp"
        app:layout_constraintStart_toStartOf="@id/txt_liste_baslik"
        app:layout_constraintTop_toBottomOf="@id/txt_liste_baslik"
        app:layout_constraintEnd_toStartOf="@id/recycling_bin"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_white_buton"
        android:elevation="3dp"
        android:queryHint="@string/search_hint"
        android:iconifiedByDefault="false"
        android:queryBackground="@color/cvBackground"
        />

    <SearchView
        android:id="@+id/searchView_in_folder"
        android:layout_width="0dp"
        android:layout_height="38dp"
        app:layout_constraintStart_toStartOf="@id/txt_liste_baslik"
        app:layout_constraintTop_toBottomOf="@id/txt_liste_baslik"
        app:layout_constraintEnd_toStartOf="@id/recycling_bin"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_white_buton"
        android:elevation="3dp"
        android:queryHint="@string/search_hint"
        android:iconifiedByDefault="false"
        android:queryBackground="@color/cvBackground"
        />

    <SearchView
        android:id="@+id/searchView_expressions"
        android:layout_width="0dp"
        android:layout_height="38dp"
        app:layout_constraintStart_toStartOf="@id/txt_liste_baslik"
        app:layout_constraintTop_toBottomOf="@id/txt_liste_baslik"
        app:layout_constraintEnd_toStartOf="@id/recycling_bin"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_white_buton"
        android:elevation="3dp"
        android:queryHint="@string/search_hint"
        android:iconifiedByDefault="false"
        android:queryBackground="@color/cvBackground"
        />

    <View
        android:id="@+id/searchView_guide"
        android:layout_width="0dp"
        android:layout_height="38dp"
        app:layout_constraintStart_toStartOf="@id/txt_liste_baslik"
        app:layout_constraintTop_toBottomOf="@id/txt_liste_baslik"
        app:layout_constraintEnd_toStartOf="@id/recycling_bin"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="15dp" />

    <ImageButton
        android:id="@+id/recycling_bin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        app:layout_constraintEnd_toStartOf="@id/view_guide_add"
        android:background="@drawable/bg_white_buton_ripple"
        android:padding="7dp"
        android:elevation="3dp"
        android:src="@drawable/baseline_delete_24"
        app:layout_constraintBottom_toBottomOf="@id/searchView_guide"
        app:layout_constraintTop_toTopOf="@id/searchView_guide"/>

    <View
        android:id="@+id/view_guide_add"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/searchView_guide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/searchView_guide"/>

    <ImageButton
        android:id="@+id/ib_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_white_buton_ripple"
        android:elevation="3dp"
        android:padding="7dp"
        android:src="@drawable/add_item_icon"
        app:layout_constraintBottom_toBottomOf="@id/searchView_guide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/searchView_guide" />

    <ImageButton
        android:id="@+id/ib_create_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/searchView_guide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/searchView_guide"
        android:background="@drawable/bg_white_buton_ripple"
        android:padding="7dp"
        android:elevation="3dp"
        android:src="@drawable/baseline_create_new_folder_24"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewExpressionsInFolder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="52dp"
        android:paddingBottom="80dp"
        android:clipToPadding="false"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/searchView_guide"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewExpressions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="52dp"
        android:paddingBottom="80dp"
        android:clipToPadding="false"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/searchView_guide"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFolders"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="52dp"
        android:paddingBottom="80dp"
        android:clipToPadding="false"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/searchView_guide"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_empty_list"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchView_guide"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        app:cardCornerRadius="30dp"
        android:elevation="3dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/cvBackground"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_empty_list"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:elevation="10dp"
                        android:src="@drawable/desert"
                        android:layout_marginTop="5dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/tv_empty_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_list_empty"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_empty_list"
                        android:layout_marginBottom="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:textSize="15sp"
                        android:textColor="@color/textColorPrimary"
                        android:textStyle="bold"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="22dp"
        app:cardElevation="6dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/toastBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <TextView
                android:id="@+id/tv_toast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="toast mesajÄ±"
                android:textStyle="bold"
                android:textColor="@color/textColorPrimary"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/ib_item_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="74dp"
        android:background="@drawable/bg_round_list"
        android:elevation="3dp"
        android:src="@drawable/baseline_menu_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/ib_folder_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="74dp"
        android:background="@drawable/bg_round_list"
        android:elevation="3dp"
        android:src="@drawable/baseline_folder_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:visibility="gone"
        android:id="@+id/ib_back_to_folders"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="74dp"
        android:background="@drawable/bg_round_list"
        android:elevation="3dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/ib_go_to_study"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_btn"
        android:elevation="3dp"
        android:src="@drawable/baseline_forward_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="74dp"
        app:tint="@color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>
